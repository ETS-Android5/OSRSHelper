<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/green_bt"
        android:paddingLeft="8dp"
        android:text="Cities"
        android:textColor="@color/White"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/pot_city_falador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gen_bt_sel"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:text="Falador"
        android:textColor="@color/Black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/pot_city_varrock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gen_bt_sel"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:text="Varrock"
        android:textColor="@color/Black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/pot_city_ardougne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gen_bt_sel"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:text="Ardougne"
        android:textColor="@color/Black"
        android:textSize="16sp" />

</LinearLayout>