<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/skill_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="center"
        android:src="@drawable/agility" />

    <TextView
        android:id="@+id/skill_name"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        tools:text="Agility"/>

    <TextView
        android:id="@+id/skill_level"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        tools:text="120" />

    <TextView
        android:id="@+id/skill_experience"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="XP: 1,456,678"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/skill_rank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        tools:text="Rank: 456,678"
        android:layout_weight="1"/>

</LinearLayout>