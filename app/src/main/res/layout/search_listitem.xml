<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/item_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_image"
        android:layout_toLeftOf="@+id/item_current"
        android:textSize="16sp"
        android:text="Adamant Axe"/>

    <TextView
        android:id="@+id/item_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A powerful axe."
        android:layout_below="@id/item_name"
        android:layout_toLeftOf="@+id/item_trend"
        android:layout_toRightOf="@id/item_image" />

    <TextView
        android:id="@+id/item_current"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:textSize="16sp"
        android:text="998"/>

    <TextView
        android:id="@+id/item_trend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_current"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:text="6"/>


</RelativeLayout>
