<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent" >

    <fragment
        android:id="@+id/profile_header"
        class="com.infonuascape.osrshelper.fragments.ProfileHeaderFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/profile_header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/constitution"
                    android:drawablePadding="3dp"
                    android:gravity="left|center_vertical"
                    android:text="@string/hitpoints_lvl"
                    android:textColor="@color/text_normal" />

                <EditText
                    android:id="@+id/edit_hitpoints"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/editbox"
                    android:gravity="center"
                    android:inputType="number"
                    android:digits="0123456789"
                    android:maxLength="2"
                    android:selectAllOnFocus="true"
                    android:text=""
                    android:textColor="@color/text_normal"
                    android:textCursorDrawable="@drawable/blackcursor" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/attack"
                    android:drawablePadding="3dp"
                    android:gravity="left|center_vertical"
                    android:text="@string/attack_lvl"
                    android:textColor="@color/text_normal" />

                <EditText
                    android:id="@+id/edit_attack"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/editbox"
                    android:gravity="center"
                    android:inputType="number"
                    android:digits="0123456789"
                    android:maxLength="2"
                    android:selectAllOnFocus="true"
                    android:text=""
                    android:textColor="@color/text_normal"
                    android:textCursorDrawable="@drawable/blackcursor" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/strength"
                    android:drawablePadding="3dp"
                    android:gravity="left|center_vertical"
                    android:text="@string/strength_lvl"
                    android:textColor="@color/text_normal" />

                <EditText
                    android:id="@+id/edit_strength"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/editbox"
                    android:gravity="center"
                    android:inputType="number"
                    android:digits="0123456789"
                    android:maxLength="2"
                    android:selectAllOnFocus="true"
                    android:text=""
                    android:textColor="@color/text_normal"
                    android:textCursorDrawable="@drawable/blackcursor" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/defence"
                    android:drawablePadding="3dp"
                    android:gravity="left|center_vertical"
                    android:text="@string/defence_lvl"
                    android:textColor="@color/text_normal" />

                <EditText
                    android:id="@+id/edit_defence"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/editbox"
                    android:gravity="center"
                    android:inputType="number"
                    android:digits="0123456789"
                    android:maxLength="2"
                    android:selectAllOnFocus="true"
                    android:text=""
                    android:textColor="@color/text_normal"
                    android:textCursorDrawable="@drawable/blackcursor" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ranged"
                    android:drawablePadding="3dp"
                    android:gravity="left|center_vertical"
                    android:text="@string/ranging_lvl"
                    android:textColor="@color/text_normal" />

                <EditText
                    android:id="@+id/edit_ranging"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/editbox"
                    android:gravity="center"
                    android:inputType="number"
                    android:digits="0123456789"
                    android:maxLength="2"
                    android:selectAllOnFocus="true"
                    android:text=""
                    android:textColor="@color/text_normal"
                    android:textCursorDrawable="@drawable/blackcursor" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/prayer"
                    android:drawablePadding="3dp"
                    android:gravity="left|center_vertical"
                    android:text="@string/prayer_lvl"
                    android:textColor="@color/text_normal" />

                <EditText
                    android:id="@+id/edit_prayer"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/editbox"
                    android:gravity="center"
                    android:inputType="number"
                    android:digits="0123456789"
                    android:maxLength="2"
                    android:selectAllOnFocus="true"
                    android:text=""
                    android:textColor="@color/text_normal"
                    android:textCursorDrawable="@drawable/blackcursor" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/magic"
                    android:drawablePadding="3dp"
                    android:gravity="left|center_vertical"
                    android:text="@string/magic_lvl"
                    android:textColor="@color/text_normal" />

                <EditText
                    android:id="@+id/edit_magic"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/editbox"
                    android:gravity="center"
                    android:inputType="number"
                    android:digits="0123456789"
                    android:maxLength="2"
                    android:selectAllOnFocus="true"
                    android:text=""
                    android:textColor="@color/text_normal"
                    android:textCursorDrawable="@drawable/blackcursor" />
            </RelativeLayout>

            <TextView
                android:id="@+id/number_lvl_needed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/lvl_need"
                android:textColor="@color/text_normal"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/attack_strength_needed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/attack_strength_lvl_needed"
                android:textColor="@color/text_normal" />

            <TextView
                android:id="@+id/hitpoint_defence_needed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hitpoint_defence_lvl_needed"
                android:textColor="@color/text_normal" />

            <TextView
                android:id="@+id/ranging_needed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ranging_lvl_needed"
                android:textColor="@color/text_normal" />

            <TextView
                android:id="@+id/magic_needed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/magic_lvl_needed"
                android:textColor="@color/text_normal" />

            <TextView
                android:id="@+id/prayer_needed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/prayer_lvl_needed"
                android:textColor="@color/text_normal" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>