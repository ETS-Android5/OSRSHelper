<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true" android:drawable="@color/menu_checked_item"/>
    <!-- Finger interaction -->
    <item android:state_focused="false" android:state_pressed="false" android:drawable="@color/transparent"/>
    <item android:state_focused="false" android:state_pressed="true" android:drawable="@color/colorAccent"/>

    <!-- Keyboard interaction -->
    <item android:state_focused="true" android:state_pressed="false" android:drawable="@color/transparent"/>
    <item android:state_focused="true" android:state_pressed="true" android:drawable="@color/colorAccent"/>

</selector>